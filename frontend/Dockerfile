# Stage 1: Build
FROM node:20-alpine as build

WORKDIR /app

COPY package*.json ./

RUN npm ci --legacy-peer-deps

COPY . .

RUN npm run build

FROM nginx:alpine

COPY nginx.conf /etc/nginx/nginx.conf

COPY --from=build /app/dist/telecom-frontend  /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"] 